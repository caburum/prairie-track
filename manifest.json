{
  "name": "PrairieTrack - PrairieLearn Tracker",
  "version": "0.4.0",
  "description": "Keep track of PrairieLearn and PrairieTest!",
  "manifest_version": 3,
  "author": "Anthony Du",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PrairieTrack - PrairieLearn Tracker"
  },
  "content_scripts": [
    {
      "matches": ["*://*.prairielearn.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage", "activeTab"]
}
